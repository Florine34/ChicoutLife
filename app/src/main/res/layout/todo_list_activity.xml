<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="42dp"
        android:background="@color/gris"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/titletodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="TO DO List"
            android:textSize="10pt"
            android:textStyle="bold"
            android:background="@color/rouge"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:id="@+id/linearafaire"
            android:layout_weight="2">

            <TextView
                android:id="@+id/titleafaire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/a_faire"
                android:textSize="10pt"
                android:textStyle="bold"
                android:background="@color/red"
                android:textAlignment="center"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearafaire2"
                android:background="@color/beige"
                >


            </ListView
>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:id="@+id/titlefait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/fait"
                android:textSize="8pt"
                android:textStyle="bold"
                android:background="@color/red"
                android:textAlignment="center"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearfait2"
                android:background="@color/beige">


            </ListView>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>