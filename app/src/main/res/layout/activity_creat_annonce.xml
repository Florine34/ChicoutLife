<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
        android:id="@+id/titrePosteAnnonce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titre de votre annonce" />

        <EditText
            android:id="@+id/RecupTitre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textShortMessage" />

        <TextView
            android:id="@+id/descrAnnonce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description de votre annonce" />

        <EditText
            android:id="@+id/RecupDescrAnnonce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textLongMessage" />


        <TextView
            android:id="@+id/prixArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prix de votre article" />

        <EditText
            android:id="@+id/RecupPrixArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textAnnonce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photo de votre annonce" />

        <Button
            android:id="@+id/photoAnnonce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prendre une photo" />

        <ImageView
            android:id="@+id/article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choisir la catÃ©gorie dans laquelle vous voulez que votre article apparaissent" />

        <CheckBox
            android:id="@+id/tag_appart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Appartement"/>

        <CheckBox
            android:id="@+id/tag_electro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Electronique"/>
        <CheckBox
            android:id="@+id/tag_nourriture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nourriture"/>

        <CheckBox
            android:id="@+id/tag_vetement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vetement"/>

        <Button
            android:id="@+id/publierAnnonce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publier mon annonce" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>