<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/titrePosteAnnonce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titre de votre annonce" />

        <EditText
            android:id="@+id/RecupTitre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/descrAnnonce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description de votre annonce" />

        <EditText
            android:id="@+id/RecupDescrAnnonce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />


        <TextView
            android:id="@+id/prixArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prix de votre article" />

        <EditText
            android:id="@+id/RecupPrixArticle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />



    </LinearLayout>
</android.support.constraint.ConstraintLayout>