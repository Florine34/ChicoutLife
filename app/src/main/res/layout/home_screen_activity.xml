<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".Home_screen">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/logo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        >


        <Button
            android:id="@+id/renseignement_remplis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accéder à la TO DO LIST"
            android:layout_marginBottom="60dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="@drawable/buttons_form"/>

        <Button
            android:id="@+id/renseignement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editer mes renseignements"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:textSize="10dp"
            android:background="@drawable/buttons_form2"/>

        <Button
            android:id="@+id/signout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se déconnecter"
            android:textSize="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttons_form2"/>

        <Button
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Afficher chosser"
            android:textSize="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttons_form2"/>
        </LinearLayout>

</LinearLayout>
