<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/arriveRenseign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Renseignements pour votre arrivée"
                android:textAlignment="center"
                android:textSize="15pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/paysQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="De quel pays venez vous ?" />

            <Spinner
                android:id="@+id/spinnerPays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/country_arrays" />

            <TextView
                android:id="@+id/DomainQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quel est votre domaine d'étude ?" />

            <Spinner
                android:id="@+id/spinnerDomaineEtude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/domaine_arrays" />

            <TextView
                android:id="@+id/programmeQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quel est votre programme d'étude ?" />

            <Spinner
                android:id="@+id/spinnerProgramme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/arriveQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quel est votre trimestre d'admission ?" />

            <RadioGroup
                android:id="@+id/sessionArrivee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/automne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Automne" />

                <RadioButton
                    android:id="@+id/hiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hiver" />

                <RadioButton
                    android:id="@+id/ete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Été" />
            </RadioGroup>

            <TextView
                android:id="@+id/tempsQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Combien de session restez-vous ?" />

            <EditText
                android:id="@+id/numberText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <Switch
                android:id="@+id/permisEtude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:showText="true"
                android:text="Avez-vous un Permis d'étude ?"
                android:textOff="Non"
                android:textOn="Oui" />

            <Switch
                android:id="@+id/echangeSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:showText="true"
                android:text="Faites vous partie d'un échange universitaire ?"
                android:textOff="Non"
                android:textOn="Oui" />

            <Switch
                android:id="@+id/iciSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:showText="true"
                android:text="Êtes-vous déjà à Chicoutimi ?"
                android:textOff="Non"
                android:textOn="Oui" />

            <Switch
                android:id="@+id/travailSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:showText="true"
                android:text="Souhaitez vous travailler pendant votre séjour ?"
                android:textOff="Non"
                android:textOn="Oui" />

            <Button
                android:id="@+id/valider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Valider" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>